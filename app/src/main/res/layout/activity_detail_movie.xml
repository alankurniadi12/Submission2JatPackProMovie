<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/mainBackgroundColor"
    tools:context=".ui.detail.DetailMovieActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:id="@+id/img_backdroup_movie"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@color/colorAccent"
                android:scaleType="fitXY"
                app:layout_collapseMode="parallax" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tb_title_movie"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:title="Title Movie"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:layout_collapseMode="pin"/>
        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_image"
                android:layout_width="140dp"
                android:layout_height="175dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp">
                <ImageView
                    android:id="@+id/img_poster"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorAccent"
                    android:scaleType="fitXY"/>
            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/img_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cv_image"
                android:layout_alignStart="@+id/cv_image"
                android:layout_marginStart="0dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_star_24" />

            <TextView
                android:id="@+id/tv_vote"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/img_start"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:layout_toEndOf="@id/img_start"
                android:text="10"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_release"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/img_start"
                android:layout_alignStart="@+id/img_start"
                android:layout_marginStart="0dp"
                android:text="2020-07-26"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/tv_overview"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_release"
                android:layout_marginTop="8dp"
                android:text="Overview:"
                android:textSize="22sp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/mainBackgroundColor2"
                android:layout_below="@id/tv_overview"
                android:layout_marginTop="8dp"
                app:cardElevation="3dp"
                app:cardCornerRadius="10dp">
                <TextView
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/dummy_detail"
                    style="@style/TextContent"
                    android:textAlignment="gravity"/>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>