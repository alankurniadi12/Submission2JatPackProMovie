<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:cardBackgroundColor="@color/cardItemBackgroundColor"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_poster_list"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@color/colorAccent"/>
            <TextView
                android:id="@+id/tv_rating_list"
                style="@style/TextContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@id/img_poster_list"
                android:layout_marginStart="8dp"
                tools:text="10"
                android:textColor="#FFC107" />

            <TextView
                android:id="@+id/tv_title_list"
                style="@style/TitleItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_below="@id/tv_rating_list"
                android:layout_toEndOf="@+id/img_poster_list"
                android:ellipsize="end"
                android:maxLines="2"
                tools:text="Title" />
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>